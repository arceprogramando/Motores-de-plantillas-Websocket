<div class='container'>
  <h1 class='text-center text-capitalize bg-primary py-4 text-up'>Endpoints api</h1>

  <p>Api de Products:
    <a href='http://localhost:{{port}}/api/products'>products</a>
  </p>
  <p>Api de Carts:
    <a href='http://localhost:{{port}}/api/carts'>carts</a>
  </p>

  <div class='container'>

    <a href='http://localhost:{{port}}/addproducts' class='list-group-item list-group-item-action d-flex justify-content-between align-items-center'>
      <span>Agregar productos en tiempo real
        <span class='btn btn-success btn-sm'>Agregar</span>
      </span>

    </a>
  </div>
  <h2>Productos Agregados</h2>
  {{#each products}}

    <section class='card' style='width: 18rem;'>
      <p>Titulo:{{this.title}}</p>
      <p>Descripci√≥n:{{this.description}}</p>
      <p>Precio: {{this.price}}</p>

    </section>
  {{else}}
    <p>No hay productos disponibles.</p>
  {{/each}}
</div>

